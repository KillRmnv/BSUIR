{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-current",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-O0",
                "-o",
              
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "${file}",
                "-std=c++17"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-O0",
                "-o",
                
                "${workspaceFolder}/build/program",
                "${workspaceFolder}/*.cpp",
                "-std=c++17"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        }
    ]
}